<%#= render "navbar" %>
<div class="container">
  <h1>Add a bookmark</h1>

  <div class="form-container">
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.input :comment %>
      <%= f.association :movie %>
      <%= f.button :submit, class:'btn btn-primary' %>
    <% end %>
  </div>

  <div class="mt-3">
    <%= link_to "< Back to the list", list_path(@list), class:'' %>
  </div>
</div>
